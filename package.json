{
  "name": "ntrack",
  "productName": "NTrack",
  "version": "1.1.2",
  "description": "A desktop app where you can easily keep track of your time-based tasks. ",
  "main": "./out/main/index.js",
  "author": "Kutay Celebi",
  "homepage": "https://github.com/kutay-celebi/ntracker",
  "repository": "https://github.com/kutay-celebi/ntracker",
  "scripts": {
    "format": "prettier --write .",
    "changelog": "standard-version -t",
    "release": "npm run changelog && git add CHANGELOG.md && git commit -m 'chore: Update CHANGELOG.md' && git push",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "lint:commit": "commitlint -e $GIT_PARAMS",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck": "npm run typecheck:node",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --sourcemap --remote-debugging-port=9229 ",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "deploy:win": "npm run build && electron-builder --win --config --publish always",
    "deploy:mac": "npm run build && electron-builder --mac --config --publish always",
    "deploy:linux": "npm run build && electron-builder --linux --config --publish always"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "dayjs": "^1.11.7",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "element-plus": "^2.3.5",
    "markdown-it": "^13.0.1",
    "markdown-it-highlightjs": "^4.0.1",
    "pinia": "^2.1.3",
    "sequelize": "^6.31.1",
    "sqlite3": "^5.1.6",
    "umzug": "^3.2.1",
    "vue-router": "^4.2.2",
    "vue-timer-hook": "^1.0.84"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@iconify-json/carbon": "^1.1.17",
    "@iconify-json/iconoir": "^1.1.28",
    "@iconify-json/ri": "^1.1.9",
    "@rushstack/eslint-patch": "^1.3.0",
    "@types/node": "16.18.21",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "ajv": "^8.12.0",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^22.3.11",
    "electron-builder": "^23.6.0",
    "electron-builder-squirrel-windows": "^24.4.0",
    "electron-vite": "^1.0.22",
    "eslint": "^8.41.0",
    "eslint-plugin-vue": "^9.14.1",
    "husky": "^8.0.3",
    "less": "^4.1.3",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "typescript": "^4.9.5",
    "unplugin-icons": "^0.16.1",
    "vite": "^4.3.9",
    "vue": "^3.3.4",
    "vue-tsc": "^1.6.5"
  },
  "packageManager": "pnpm@8.5.1",
  "husky": {
    "hooks": {
      "commit-msg": "npm run lint:commit"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "skip": {
      "commit": false,
      "tag": false
    }
  }
}
